{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jasmine": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
      ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": [2, "always"],
        "quotes": [2, "double"],
        "indent": ["error", 4],
        "space-before-function-paren": ["off", "never"]
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
      ]
}